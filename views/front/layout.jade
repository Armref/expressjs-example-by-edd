                  a(href='/opportunities/competition', tabindex='-1') Competition
                li
                  a(href='/opportunities/financial-aid', tabindex='-1') Financial aid
            li
              a(href='/news') News
          ul.nav.navbar-nav.navbar-right
            if currentUser
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | currentUser.name 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') My Favorites
                  li
                    a(href='#') Log Out
            else
              li
                a(href='/auth/login') Log In
              li
                a(href='/auth/signup') Sign Up

        // /.navbar-collapse
      // /.container-fluid

    .container
      .row
        .col-md-12
        
          if (messages.info)
              .alert.alert-info
                span= messages.info

          if (messages.error)
              .alert.alert-danger
                span= messages.error

          block content

    p &nbsp;
    include footer.jade
